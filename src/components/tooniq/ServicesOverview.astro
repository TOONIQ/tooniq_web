---
import { services } from "@utils/tooniq-data";
import ServiceCard from "./ServiceCard.astro";
---

<section class="bg-slate-50 py-24 dark:bg-slate-900">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <!-- セクションヘッダー -->
    <div class="mb-16 text-center">
      <h2
        class="mb-4 bg-gradient-to-r from-purple-600 to-indigo-600 bg-clip-text text-4xl font-bold text-transparent sm:text-5xl dark:from-purple-400 dark:to-indigo-400"
      >
        サービス
      </h2>
      <p class="mx-auto max-w-2xl text-lg text-slate-600 dark:text-slate-300">
        アニメ制作の課題を解決する、先進的なソリューションを提供します
      </p>
    </div>

    <!-- サービスカードグリッド -->
    <div
      class="grid gap-8 md:grid-cols-2 lg:grid-cols-3"
    >
      {services.map((service) => <ServiceCard service={service} />)}
    </div>

    <!-- CTAボタン -->
    <div class="mt-16 text-center">
      <a
        href="/services"
        class="inline-flex items-center justify-center gap-2 rounded-full bg-gradient-to-r from-purple-600 to-indigo-600 px-8 py-4 text-lg font-semibold text-white shadow-lg transition-all duration-300 hover:scale-105 hover:shadow-xl"
      >
        すべてのサービスを見る
        <svg
          class="h-5 w-5"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
        </svg>
      </a>
    </div>
  </div>
</section>
