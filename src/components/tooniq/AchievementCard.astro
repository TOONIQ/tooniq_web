---
interface Props {
  achievement: {
    title: string;
    description: string;
    category: string;
  };
}

const { achievement } = Astro.props;
---

<div
  class="group rounded-2xl border border-slate-200 bg-gradient-to-br from-white to-slate-50 p-8 shadow-sm transition-all duration-300 hover:shadow-xl hover:scale-105 dark:border-slate-700 dark:from-slate-800 dark:to-slate-900"
>
  <!-- カテゴリーバッジ -->
  <div class="mb-4">
    <span
      class="inline-block rounded-full bg-gradient-to-r from-purple-500 to-indigo-600 px-4 py-1.5 text-xs font-semibold text-white shadow-md"
    >
      {achievement.category}
    </span>
  </div>

  <!-- タイトル -->
  <h3
    class="mb-4 text-xl font-bold text-slate-900 transition-colors group-hover:text-purple-600 dark:text-slate-100 dark:group-hover:text-purple-400"
  >
    {achievement.title}
  </h3>

  <!-- 説明 -->
  <p class="leading-relaxed text-slate-600 dark:text-slate-300">
    {achievement.description}
  </p>

  <!-- デコレーション -->
  <div
    class="absolute right-4 top-4 h-24 w-24 rounded-full bg-gradient-to-br from-purple-500/10 to-indigo-600/10 opacity-0 blur-2xl transition-opacity duration-300 group-hover:opacity-100"
  >
  </div>
</div>
