---
interface Props {
  member: {
    name: string;
    role: string;
    bio: string;
  };
}

const { member } = Astro.props;
---

<div
  class="group rounded-2xl border border-slate-200 bg-white p-8 shadow-sm transition-all duration-300 hover:shadow-xl dark:border-slate-700 dark:bg-slate-800"
>
  <!-- アバター -->
  <div
    class="mb-6 h-24 w-24 rounded-full bg-gradient-to-br from-purple-500 to-indigo-600 p-1 shadow-lg"
  >
    <div
      class="flex h-full w-full items-center justify-center rounded-full bg-white text-4xl font-bold text-purple-600 dark:bg-slate-800 dark:text-purple-400"
    >
      {member.name.charAt(0)}
    </div>
  </div>

  <!-- 名前 -->
  <h3 class="mb-2 text-2xl font-bold text-slate-900 dark:text-slate-100">
    {member.name}
  </h3>

  <!-- 役職 -->
  <p
    class="mb-4 text-sm font-semibold text-purple-600 dark:text-purple-400"
  >
    {member.role}
  </p>

  <!-- 経歴 -->
  <p class="leading-relaxed text-slate-600 dark:text-slate-300">
    {member.bio}
  </p>
</div>
