---
import { companyInfo, services } from "@utils/tooniq-data";
import { navigationLinks } from "@utils/navigation";

// Props for customization
const companyName = companyInfo.name;
const companyDescription = companyInfo.mission;

// Contact information for the company
const contactDetails = {
  email: "contact@tooniq.co.jp",
  website: "tooniq.co.jp",
};

// Dynamic date for copyright display
const copyrightYear = new Date().getFullYear();
---

<footer
  class="mt-auto w-full bg-white border-t-2 border-slate-200 shadow-inner dark:bg-slate-900 dark:border-slate-700"
>
  <div class="mx-auto mt-auto w-full max-w-[85rem] px-4 pb-10 pt-16 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 gap-12 md:grid-cols-2 lg:grid-cols-4">
      {/* Company Information */}
      <div class="lg:col-span-2">
        <a
          href="/"
          class="inline-block text-2xl font-bold bg-gradient-to-r from-purple-600 to-indigo-600 bg-clip-text text-transparent focus:opacity-80 focus:outline-hidden dark:from-purple-400 dark:to-indigo-400"
        >
          {companyName}
        </a>
        <p class="mt-4 text-sm leading-relaxed text-slate-700 dark:text-slate-300">
          {companyInfo.tagline}
        </p>
        <p class="mt-4 text-sm leading-relaxed text-slate-700 dark:text-slate-300">
          {companyDescription}
        </p>
        <div class="mt-6 space-y-2">
          <p class="text-sm text-slate-700 dark:text-slate-300">
            <span class="font-semibold">Email:</span>
            <a href={`mailto:${contactDetails.email}`} class="ml-2 text-purple-600 hover:text-purple-700 dark:text-purple-400">
              {contactDetails.email}
            </a>
          </p>
        </div>
      </div>

      {/* Quick Links */}
      <div>
        <h3 class="mb-4 text-sm font-semibold uppercase tracking-wider text-slate-900 dark:text-slate-100">
          リンク
        </h3>
        <ul class="space-y-3">
          {
            navigationLinks.map((link) => (
              <li>
                <a
                  href={link.href}
                  target={link.external ? "_blank" : undefined}
                  rel={link.external ? "noopener noreferrer" : undefined}
                  class="text-sm text-slate-700 transition-colors hover:text-purple-600 dark:text-slate-300 dark:hover:text-purple-400"
                >
                  {link.label}
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      {/* Services */}
      <div>
        <h3 class="mb-4 text-sm font-semibold uppercase tracking-wider text-slate-900 dark:text-slate-100">
          サービス
        </h3>
        <ul class="space-y-3">
          {
            services.slice(0, 4).map((service) => (
              <li>
                <a
                  href="/services"
                  class="text-sm text-slate-700 transition-colors hover:text-purple-600 dark:text-slate-300 dark:hover:text-purple-400"
                >
                  {service.name}
                </a>
              </li>
            ))
          }
        </ul>
      </div>
    </div>

    {/* Divider before footer's bottom section */}
    <hr class="mb-8 mt-12 border-slate-300 dark:border-slate-700" />

    <div
      class="flex flex-col items-center justify-between gap-4 sm:flex-row"
    >
      {/* Copyright Section */}
      <p class="text-sm text-slate-600 dark:text-slate-400">
        &copy; {copyrightYear} {companyName}. All rights reserved.
      </p>

      {/* Tagline */}
      <p class="text-sm text-slate-600 dark:text-slate-400">
        {companyInfo.tagline}
      </p>
    </div>
  </div>
</footer>
