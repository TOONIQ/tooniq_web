---
/**
 * ベースレイアウト - TOONIQウェブサイト
 *
 * 全ページで使用される共通レイアウト
 * ヘッダー、フッター、メタタグなどを統一的に管理
 */

import '@/assets/styles/global.css';
import Header from '@/components/common/Header.astro';
import Footer from '@/components/common/Footer.astro';
import ThemeProvider from '@/components/react/ThemeProvider';
import LoadingScreen from '@/components/react/LoadingScreen';

// ページ情報の型定義
interface Props {
  /** ページタイトル */
  title: string;
  /** ページの説明文（SEO用） */
  description?: string;
  /** OGP画像のパス */
  ogImage?: string;
}

// デフォルト値を含むプロップスの取得
const {
  title,
  description = 'TOONIQは、AI技術でアニメ制作の未来を創造する企業です。制作進行管理システムAnimaTimeをはじめ、業界の課題を解決するソリューションを提供しています。',
  ogImage = '/images/og-image.jpg'
} = Astro.props;

// サイトの完全なタイトルを生成
const fullTitle = title === 'TOONIQ' ? title : `${title} | TOONIQ`;
---

<!doctype html>
<html lang="ja" class="scroll-smooth">
  <head>
    <!-- ダークモード初期設定（ちらつき防止） -->
    <script is:inline>
      // ページ読み込み前にダークモードを設定（ちらつき防止）
      if (window.matchMedia('(prefers-color-scheme: dark)').matches) {
        document.documentElement.classList.add('dark');
      }
    </script>

    <!-- スプラッシュスクリーン初期表示制御（FOUC防止） -->
    <script is:inline>
      // 初回訪問時のみコンテンツを隠す（即座に実行）
      (function() {
        if (!sessionStorage.getItem('tooniq-has-visited')) {
          document.documentElement.style.setProperty('--splash-display', 'block');
        }
      })();
    </script>

    <style is:inline>
      /* スプラッシュスクリーン用の初期スタイル */
      :root {
        --splash-display: none;
      }

      /* 初回訪問時にコンテンツを隠す */
      body.splash-active {
        overflow: hidden;
      }

      body.splash-active > *:not(#splash-screen-wrapper) {
        visibility: hidden;
      }
    </style>

    <!-- 基本メタタグ -->
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />

    <!-- OGP (Open Graph Protocol) メタタグ -->
    <meta property="og:title" content={fullTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:image" content={ogImage} />

    <!-- Twitter Card メタタグ -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={fullTitle} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImage} />

    <!-- ファビコン -->
    <link rel="icon" type="image/svg+xml" href="/images/width_1024.svg" />

    <!-- フォントの事前読み込み -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&family=Noto+Sans+JP:wght@300;400;500;700;900&display=swap"
      rel="stylesheet"
    />

    <title>{fullTitle}</title>
  </head>

  <body class="antialiased">
    <!-- 初回訪問時にbodyにsplash-activeクラスを追加 -->
    <script is:inline>
      if (!sessionStorage.getItem('tooniq-has-visited')) {
        document.body.classList.add('splash-active');
      }
    </script>

    <!-- スプラッシュスクリーン（初回訪問時のみ） -->
    <div id="splash-screen-wrapper">
      <LoadingScreen client:only="react" />
    </div>

    <!-- テーマプロバイダー（ダークモード対応） -->
    <ThemeProvider client:load>
      <!-- ヘッダー -->
      <Header />

      <!-- メインコンテンツ -->
      <main class="min-h-screen">
        <slot />
      </main>

      <!-- フッター -->
      <Footer />
    </ThemeProvider>

    <!-- スムーズスクロール用のスクリプト -->
    <script>
      // ページ内リンクのスムーズスクロール
      document.querySelectorAll('a[href^="#"]').forEach(anchor => {
        anchor.addEventListener('click', function (e) {
          e.preventDefault();
          const target = document.querySelector(this.getAttribute('href'));
          if (target) {
            target.scrollIntoView({
              behavior: 'smooth',
              block: 'start'
            });
          }
        });
      });
    </script>
  </body>
</html>
