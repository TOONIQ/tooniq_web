---
import BaseLayout from "@layout/BaseLayout.astro";
import { companyInfo, leadership, history, futureVision } from "@utils/tooniq-data";
import TeamMember from "../components/tooniq/TeamMember.astro";

const seo = {
  title: "会社概要 - 合同会社TOONIQ",
  description: "TOONIQの企業理念、チーム、そしてアニメ業界の未来への取り組みについて",
};
---

<BaseLayout seo={seo}>
  <!-- ヘッダーセクション -->
  <section
    class="bg-gradient-to-br from-purple-900 via-indigo-900 to-slate-900 py-24"
  >
    <div class="mx-auto max-w-7xl px-4 text-center sm:px-6 lg:px-8">
      <h1 class="mb-6 text-5xl font-bold text-white sm:text-6xl md:text-7xl">
        {companyInfo.name}
      </h1>
      <p class="mx-auto max-w-3xl text-xl text-slate-200 sm:text-2xl">
        {companyInfo.tagline}
      </p>
    </div>
  </section>

  <!-- ミッションセクション -->
  <section class="bg-white py-24 dark:bg-slate-800">
    <div class="mx-auto max-w-5xl px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <h2
          class="mb-8 text-4xl font-bold text-slate-900 sm:text-5xl dark:text-slate-100"
        >
          私たちのミッション
        </h2>
        <p
          class="text-2xl leading-relaxed text-slate-700 sm:text-3xl dark:text-slate-200"
        >
          {companyInfo.mission}
        </p>
      </div>
    </div>
  </section>

  <!-- リーダーシップチーム -->
  <section class="bg-slate-50 py-24 dark:bg-slate-900">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="mb-16 text-center">
        <h2
          class="mb-4 text-4xl font-bold text-slate-900 sm:text-5xl dark:text-slate-100"
        >
          リーダーシップチーム
        </h2>
        <p class="mx-auto max-w-2xl text-lg text-slate-600 dark:text-slate-300">
          技術と情熱で、アニメ業界の未来を切り拓くチーム
        </p>
      </div>

      <div class="grid gap-8 md:grid-cols-2">
        {leadership.map((member) => <TeamMember member={member} />)}
      </div>
    </div>
  </section>

  <!-- 企業沿革 -->
  <section class="bg-white py-24 dark:bg-slate-800">
    <div class="mx-auto max-w-5xl px-4 sm:px-6 lg:px-8">
      <div class="mb-16 text-center">
        <h2
          class="mb-4 text-4xl font-bold text-slate-900 sm:text-5xl dark:text-slate-100"
        >
          企業沿革
        </h2>
      </div>

      <div class="space-y-8">
        {
          history.map((item) => (
            <div class="relative rounded-2xl border border-slate-200 bg-slate-50 p-8 dark:border-slate-700 dark:bg-slate-900">
              <div class="mb-4 inline-block rounded-full bg-gradient-to-r from-purple-600 to-indigo-600 px-6 py-2 text-lg font-bold text-white shadow-md">
                {item.year}
              </div>
              <p class="text-lg leading-relaxed text-slate-700 dark:text-slate-300">
                {item.description}
              </p>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- 今後の展望 -->
  <section class="bg-slate-50 py-24 dark:bg-slate-900">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="mb-16 text-center">
        <h2
          class="mb-4 text-4xl font-bold text-slate-900 sm:text-5xl dark:text-slate-100"
        >
          今後の展望
        </h2>
        <p class="mx-auto max-w-2xl text-lg text-slate-600 dark:text-slate-300">
          次世代のアニメ制作を実現するための取り組み
        </p>
      </div>

      <div class="grid gap-8 md:grid-cols-3">
        {
          futureVision.map((vision, index) => (
            <div class="group rounded-2xl border border-slate-200 bg-white p-8 shadow-sm transition-all duration-300 hover:shadow-xl hover:scale-105 dark:border-slate-700 dark:bg-slate-800">
              <div class="mb-6 text-5xl">{["🤖", "🎬", "📚"][index]}</div>
              <h3 class="mb-4 text-2xl font-bold text-slate-900 transition-colors group-hover:text-purple-600 dark:text-slate-100 dark:group-hover:text-purple-400">
                {vision.title}
              </h3>
              <p class="leading-relaxed text-slate-600 dark:text-slate-300">
                {vision.description}
              </p>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- 企業情報 -->
  <section class="bg-white py-24 dark:bg-slate-800">
    <div class="mx-auto max-w-3xl px-4 sm:px-6 lg:px-8">
      <div class="mb-16 text-center">
        <h2
          class="mb-4 text-4xl font-bold text-slate-900 sm:text-5xl dark:text-slate-100"
        >
          企業情報
        </h2>
      </div>

      <div
        class="divide-y divide-slate-200 rounded-2xl border border-slate-200 bg-slate-50 dark:divide-slate-700 dark:border-slate-700 dark:bg-slate-900"
      >
        <div class="grid gap-4 p-6 sm:grid-cols-3">
          <dt class="font-semibold text-slate-900 dark:text-slate-100">
            会社名
          </dt>
          <dd class="text-slate-700 sm:col-span-2 dark:text-slate-300">
            {companyInfo.name}
          </dd>
        </div>
        <div class="grid gap-4 p-6 sm:grid-cols-3">
          <dt class="font-semibold text-slate-900 dark:text-slate-100">
            設立
          </dt>
          <dd class="text-slate-700 sm:col-span-2 dark:text-slate-300">
            {companyInfo.founded}
          </dd>
        </div>
        <div class="grid gap-4 p-6 sm:grid-cols-3">
          <dt class="font-semibold text-slate-900 dark:text-slate-100">
            事業内容
          </dt>
          <dd class="text-slate-700 sm:col-span-2 dark:text-slate-300">
            アニメ制作支援ソフトウェアの開発・提供、技術コンサルティング、カスタム開発
          </dd>
        </div>
      </div>
    </div>
  </section>

  <!-- CTAセクション -->
  <section class="bg-slate-50 py-24 dark:bg-slate-900">
    <div class="mx-auto max-w-4xl px-4 text-center sm:px-6 lg:px-8">
      <h2 class="mb-6 text-4xl font-bold text-slate-900 dark:text-slate-100">
        一緒にアニメの未来を創りませんか？
      </h2>
      <p class="mb-12 text-xl text-slate-600 dark:text-slate-300">
        私たちのビジョンに共感する仲間を募集しています
      </p>
      <div class="flex flex-col items-center justify-center gap-4 sm:flex-row">
        <a
          href={companyInfo.recruitUrl}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center justify-center gap-2 rounded-full bg-gradient-to-r from-purple-600 to-indigo-600 px-10 py-5 text-lg font-semibold text-white shadow-xl transition-all duration-300 hover:scale-105 hover:shadow-2xl"
        >
          採用情報を見る
          <svg
            class="h-5 w-5"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
          </svg>
        </a>
        <a
          href="/contact"
          class="inline-flex items-center justify-center gap-2 rounded-full border-2 border-purple-600 bg-transparent px-10 py-5 text-lg font-semibold text-purple-600 transition-all duration-300 hover:scale-105 hover:bg-purple-600 hover:text-white dark:border-purple-400 dark:text-purple-400 dark:hover:bg-purple-400 dark:hover:text-white"
        >
          お問い合わせ
        </a>
      </div>
    </div>
  </section>
</BaseLayout>
