---
import BaseLayout from '@/layouts/BaseLayout.astro';

const pageTitle = 'Not Found';
const pageDescription = 'The requested URL was not found on this server.';
---

<BaseLayout title={pageTitle} description={pageDescription}>
  <section class="relative min-h-screen flex items-center justify-center bg-gradient-to-br from-slate-900 via-blue-900 to-slate-900">
    <div class="absolute inset-0 bg-slate-900/60" aria-hidden="true"></div>

    <div class="relative mx-auto max-w-7xl px-4 py-24 sm:px-6 lg:px-8 z-10">
      <div class="text-center">
        <h1 class="mb-6 text-6xl font-bold text-white" style="text-shadow: 0 4px 20px rgba(0,0,0,0.7)">
          Not Found
        </h1>

        <p class="text-xl text-white/90 mb-4" style="text-shadow: 0 2px 10px rgba(0,0,0,0.5)">
          The requested URL was not found on this server.
        </p>

        <p class="text-lg text-white/80 mb-8" style="text-shadow: 0 2px 10px rgba(0,0,0,0.5)">
          Additionally, a 404 Not Found error was encountered while trying to use an ErrorDocument to handle the request.
        </p>

        <a
          href="/"
          class="inline-flex items-center gap-2 px-8 py-4 rounded-full bg-white text-blue-900 font-semibold hover:shadow-xl transition-all duration-300 hover:scale-105"
        >
          トップページに戻る
        </a>
      </div>
    </div>
  </section>
</BaseLayout>
